<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040002"
    tools:context=".PaintActivity">
    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/page_clear"
                android:onClick="onClick"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/icon_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/page_clear"
                android:id="@+id/page_save"
                android:onClick="onClick"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/icon_save_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/topbar"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_above="@id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.my_documenst.PaintView
            android:background="@drawable/rectangle"
            android:padding="3dp"
            android:id="@+id/paintview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <SeekBar
        android:background="@color/colorPrimaryLightPix"
        android:layout_above="@id/bottombar"
        android:padding="12dp"
        android:visibility="gone"
        android:translationZ="20dp"
        android:id="@+id/brush_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:id="@+id/bottombar"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@drawable/btn_state_bg"
                android:layout_weight="1"
                android:onClick="onClick"
                android:id="@+id/btn_undo"
                android:src="@drawable/icon_undo"
                android:drawableRight="@drawable/icon_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:background="@drawable/btn_state_bg"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:id="@+id/btn_redo"
                android:src="@drawable/icon_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:background="@null"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:id="@+id/btn_erase"
                android:onClick="onClick"
                android:src="@drawable/icon_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:background="@null"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:id="@+id/btn_paint"
                android:onClick="onClick"
                android:src="@drawable/icon_brush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:src="@drawable/icon_color"
                android:layout_marginHorizontal="6dp"
                android:background="#000"
                android:id="@+id/color_selector"
                android:onClick="onClick"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginHorizontal="6dp"
                android:padding="5dp"
                android:textColor="#F30A0A"
                android:background="@drawable/rectangle"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:id="@+id/brush_size_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="4" />
            <Spinner
                android:layout_marginHorizontal="6dp"
                android:padding="3dp"
                android:background="@drawable/rectangle"
                android:layout_weight="1"
                android:id="@+id/shape_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>